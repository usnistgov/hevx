FROM ubuntu:18.04
RUN apt update -y
RUN apt install -y curl python3-pip git pkg-config libx11-dev libx11-xcb-dev libxcb1-dev libxcb-icccm4-dev
RUN pip3 install --user wheezy.template
RUN mkdir cmake && curl -L "https://github.com/Kitware/CMake/releases/download/v3.12.4/cmake-3.12.4-Linux-x86_64.tar.gz" | tar --strip-components=1 -xz -C cmake

